---
interface Props {
	title: string;
	description?: string;
	showNavbar?: boolean;
}

const { title, description = "Ronit Kapur's personal website with blog, research, and outreach sections", showNavbar = true } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Lora:ital,wght@0,400;0,600;1,400&family=Merriweather:wght@300;400;700&display=swap" rel="stylesheet">
		<title>{title}</title>
	</head>
	<body class="min-h-screen flex flex-col bg-gray-900 text-gray-200 font-serif">
		{showNavbar && (
			<header class="bg-gray-800 border-b border-gray-700">
				<div class="container mx-auto px-4 py-6">
					<nav class="flex justify-between items-center">
						<a href="/" class="text-2xl font-bold text-blue-400">Ronit Kapur</a>
						<ul class="flex space-x-6">
							<li><a href="/" class="hover:text-blue-400 transition-colors">Home</a></li>
							<li><a href="/blog" class="hover:text-blue-400 transition-colors">Writing</a></li>
							<li><a href="/research" class="hover:text-blue-400 transition-colors">Research</a></li>
							<li><a href="/outreach" class="hover:text-blue-400 transition-colors">Outreach</a></li>
							<li><a href="/gallery" class="hover:text-blue-400 transition-colors">Gallery</a></li>
						</ul>
					</nav>
				</div>
			</header>
		)}
		
		<main class="flex-grow container mx-auto px-4 py-8">
			<slot />
		</main>
		
		<footer class="bg-gray-800 border-t border-gray-700 py-8">
			<div class="container mx-auto px-4">
				<div class="flex justify-between items-center">
					<p class="text-gray-400">Â© {new Date().getFullYear()} Ronit Kapur. Site built with <a href="https://astro.build/" class="text-blue-500 hover:text-blue-400">Astro</a>.</p>
					<div class="flex space-x-4">
						<a href="https://github.com/rkloco" target="_blank" class="text-gray-400 hover:text-blue-400">GitHub</a>
						<a href="https://x.com/rk_loco" target="_blank" class="text-gray-400 hover:text-blue-400">Twitter</a>
						<a href="https://linkedin.com/in/ronit-kapur" target="_blank" class="text-gray-400 hover:text-blue-400">LinkedIn</a>
					</div>
				</div>
			</div>
		</footer>
	</body>
</html>

<style is:global>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		font-family: 'Lora', Georgia, serif;
	}

	h1, h2, h3, h4, h5, h6 {
		font-family: 'Merriweather', Georgia, serif;
	}
</style>
