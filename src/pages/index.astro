<style>
	.typing-cursor {
		display: inline-block;
		width: 2px;
	}
	.animate-blink {
		animation: blink 0.7s infinite;
	}
	@keyframes blink {
		0%, 100% { opacity: 1; }
		50% { opacity: 0; }
	}
	
	#particles-js {
		width: 100%;
		height: 100%;
		background-color: #000000; /* black background */
	}
</style>

<script>
	document.addEventListener('DOMContentLoaded', () => {
		const phrases = ["", ""];
		const nameText = "Ronit Kapur";
		const typingElement = document.getElementById('typing-text');
		const nameElement = document.getElementById('name-text');
		const cursorElement = document.querySelector('.typing-cursor');
		let phraseIndex = 0;
		let charIndex = 0;
		let isTyping = true;
		
		function typeText() {
			const currentPhrase = phrases[phraseIndex];
			
			if (isTyping) {
				// Still typing the current phrase
				if (charIndex < currentPhrase.length) {
					typingElement.textContent += currentPhrase.charAt(charIndex);
					charIndex++;
					setTimeout(typeText, 100); // Typing speed
				} else {
					// Start typing the name if we're at the first phrase
					if (phraseIndex === 0) {
						typeNameGradually();
					} else {
						// Move to next phrase
						isTyping = false;
						setTimeout(typeText, 1500); // Pause before erasing
					}
				}
			} else {
				// Erasing the current phrase
				if (charIndex > 0) {
					typingElement.textContent = typingElement.textContent.slice(0, -1);
					charIndex--;
					setTimeout(typeText, 50); // Erasing speed (faster than typing)
				} else {
					// Move to next phrase
					isTyping = true;
					phraseIndex = (phraseIndex + 1) % phrases.length;
					setTimeout(typeText, 500); // Pause before typing next phrase
				}
			}
		}
		
		function typeNameGradually() {
			let nameIndex = 0;
			const nameInterval = setInterval(() => {
				if (nameIndex < nameText.length) {
					nameElement.textContent += nameText.charAt(nameIndex);
					nameIndex++;
				} else {
					clearInterval(nameInterval);
					// Hide the cursor after typing is complete
					cursorElement.style.display = 'none';
				}
			}, 120); // Name typing speed
		}
		
		// Start the typing animation
		typeText();
	});
</script>

