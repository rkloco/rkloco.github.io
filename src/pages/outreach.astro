---
import Layout from '../layouts/Layout.astro';

// Sample outreach activities - you can replace these with your actual activities
const outreachActivities = [
  {
    title: "Speaker, ISDC 2025",
    description: "Will conduct presentations in the Planetary Defense and Many Roads to Space sessions at the 2025 International Space Development Conference.",
    date: "June 2025",
    location: "Orlando, FL",
    image: "/outreach/isdc.png",
  },
  {
    title: "Science Olympiad A-Team",
    description: "Part of a nation-wide team of volunteers managing space science events for Science Olympiad, the premier team STEM competition for middle and high school students in the country.",
    date: "Fall 2024 - present",
    location: "At-Large",
    image: "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSXHYVZzvyuXS353QOYjXCaos2wIcJ-MskXxg&s",
  },
  {
    title: "TJHSST AI Symposium",
    description: "Moderated a six-expert panel discussion on AI in K-12 education, presenting to a crowd of 100+ students and members of the Fairfax County School Board.",
    date: "Spring 2024",
    location: "Thomas Jefferson High School for Science and Technology",
    image: "https://content.govdelivery.com/attachments/fancy_images/VAEDUFCPS/2024/05/9425697/ai-symposium-still-shot_original.jpg",
  },
  {
    title: "Space Summit DC",
    description: "Developed and ran the first-ever space conference for high school students in the DC area.",
    date: "September 2023",
    location: "University of Maryland, College Park",
    image: "/outreach/spacesummit.png",
  },
];

// Sample teaching and mentoring activities
const teachingActivities = [
  {
    title: "MVLA & Math 219 - Matrices and Vectors",
    role: "Teaching Assistant",
    institution: "Duke University",
    period: "Fall 2025",
  },
  {
    title: "Reach For The Stars - Science Olympiad Division B",
    role: "Mentor",
    institution: "TJHSST",
    period: "2020-2021",
  },
];
---

<Layout title="Outreach | Ronit Kapur">
  <div class="max-w-4xl mx-auto">
    <header class="mb-10">
      <h1 class="text-4xl font-bold mb-4 text-blue-400">Outreach</h1>
      <p class="text-lg text-gray-300 italic">"Science is not finished until it is communicated."</p>
      <p class="text-lg text-gray-300 indent-2">- Mark Walport</p>
    </header>
    <section class="mb-16">
      <h2 class="text-3xl font-bold mb-8 text-blue-300">Public Engagement</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {outreachActivities.map((activity) => (
          <div class="bg-gray-800 rounded-lg overflow-hidden shadow-md border border-gray-700 hover:shadow-blue-900/20 transition-shadow">
            <img 
              src={activity.image} 
              alt={activity.title} 
              class="w-full h-48 object-cover"
            />
            <div class="p-6">
              <h3 class="text-xl font-semibold mb-2 text-blue-400">{activity.title}</h3>
              <p class="text-gray-400 mb-2">{activity.date} | {activity.location}</p>
              <p class="text-gray-300">{activity.description}</p>
            </div>
          </div>
        ))}
      </div>
    </section>

    <section class="mb-16">
      <h2 class="text-3xl font-bold mb-8 text-blue-300">Teaching & Mentoring</h2>
      <div class="bg-gray-800 rounded-lg shadow-md overflow-hidden border border-gray-700">
        <div class="divide-y divide-gray-700">
          {teachingActivities.map((item) => (
            <div class="p-6">
              <h3 class="text-xl font-semibold mb-2 text-blue-400">{item.title}</h3>
              <p class="text-gray-300 mb-1"><strong class="text-blue-300">Role:</strong> {item.role}</p>
              <p class="text-gray-300 mb-1"><strong class="text-blue-300">Institution:</strong> {item.institution}</p>
              <p class="text-gray-300"><strong class="text-blue-300">Period:</strong> {item.period}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <section>
      <h2 class="text-3xl font-bold mb-8 text-blue-300">Always Looking.</h2>
      <div class="bg-gray-800 p-8 rounded-lg shadow-md border border-gray-700">
        <p class="text-gray-300 mb-6">
          Effective communication, mentorship, and community are vital to the continued excellence of the scientific institution. I'm always looking to chat with those who share these values. Reach out!
        </p>
        <div class="bg-gray-700 p-6 rounded-lg">
          <h3 class="text-xl font-semibold mb-4 text-blue-400">Contact Me</h3>
          <p class="text-gray-300 mb-2">
            <strong class="text-blue-300">Email:</strong> <a href="mailto:ronit.kapur@duke.edu" class="text-blue-400 hover:underline">ronit.kapur@duke.edu</a>
          </p>
        </div>
      </div>
    </section>
  </div>
</Layout> 